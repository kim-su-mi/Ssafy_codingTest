package swea_asignment;

import java.io.BufferedReader;
import java.io.IOException;
import java.io.InputStreamReader;
import java.util.StringTokenizer;

public class Swea_14510 {
	public static void main(String[] args) throws NumberFormatException, IOException {
		BufferedReader br = new BufferedReader(new InputStreamReader(System.in));
		
		int T = Integer.parseInt(br.readLine());
		
		for (int tc = 1; tc<= T; tc++) {
			int N = Integer.parseInt(br.readLine()); //나무의 개수
			int[] tree = new int[N];
	
			int maxHeight = Integer.MIN_VALUE;
			// 배열에 나무 담고 최대 높이 구함 
			StringTokenizer st = new StringTokenizer(br.readLine());
			for (int i = 0; i < N; i++) {
				tree[i] = Integer.parseInt(st.nextToken());
				maxHeight = Math.max(maxHeight, tree[i]);
			}
			
			int oddDays = 0, evenDays = 0;
            for (int h : tree) {
                int diff = maxHeight - h;
                oddDays += diff / 2;
                evenDays += diff % 2;
            }

            int minDays = 0;
            if (oddDays >= evenDays) {
                minDays = oddDays * 2;
            } else {
                minDays = (evenDays - oddDays) * 2 - 1 + oddDays * 2;
            }


	            System.out.println("#" + tc + " " + minDays);
            
			
			
			
			
			
			
		}//end tc
		
	}

}
